<html>
    <head>
        <title>Remote Compilation</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script> 
        	String.prototype.replaceAll = function(target, replacement) {
			  return this.split(target).join(replacement);
			};
        </script>
    </head>
    <body>
       
        <div style="padding:20px;margin:20px">
		<!--<div class="jumbotron"> <h1 style="text-align: center">Remote Compilation</h1></div>-->

		<div class="row">
			<div class="col-md-6 " style="padding:25px">
				<div class="panel panel-default">
				    <div class="panel-heading">
				    	<h3> <%=object.question.title%> </h3>
				    </div>
				    <div class="panel panel-body">
					    <p><%- (object.question.description).replaceAll("\n","<br>") %>
					    </p>
					    <div class="panel panel-default">
					    	 <div class="panel-heading">
					    	 	<h3>Sample Input</h3>
					    	 </div>
					    	 <div class="panel-body"> <%- (object.question.sampleInput) %></div>
					    	
					    </div>
					    <div class="panel panel-default">
					    	 <div class="panel-heading">
					    	 	<h3>Sample Output</h3>
					    	 </div>
					    	 <div class="panel-body"> <%- (object.question.sampleOutput) %></div>
					    	
					    </div>
				    </div>
			   </div>
			</div>
			<div class="col-md-6">
				
				<!--<h2>Your Code goes here</h2>-->
				<form action=<%="/questions/"+object.question._id%> method="POST">
				    <!--<textarea style="Width:100%;height:500px" name="userCode">-->
				    
			    	<!--</textarea>-->
			    	<div class="form-group">
	                    <label for="userCode">Coding Area</label>
	                    <textarea class="form-control" id="userCode" rows="40" name="userCode"><%= object.data.Code %></textarea>
               		 </div>
				    <button>Submit</button>
				</form>
				<div class="well" style="Width:100%;height:200px">
				<p >	<%= object.data.Output %></p>
				</div>
			</div>
		</div>
		</div>
	
        <script src="https://code.jquery.com/jquery-3.1.1.min.js"
                integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
                crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </body>
    
</html>